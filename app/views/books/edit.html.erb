<h1>Editing Book</h1>

<%= form_with model: @book, local: true do |f| %>
<%# ここからエラーメッセージ %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%# ここまでエラーメッセージ %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class="update-btn">
      <%= f.submit 'Update Book' %>    
    </div>
    <div class="showmin">
    <%= link_to "show", book_path(@book) %>
    <div class="tate"></div>
    <a href="/books">Back</a>
    </div>
    
    
<% end %>


