<div class="new">
<h1>New book</h1>
<%# ここからエラーメッセージ %>

<%= form_with model: @book, local: true do |f| %>
    
    <%# ここからエラーメッセージ %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%# ここまでエラーメッセージ %>
<!-- form_for部分 -->
   
 
    <h4>Tilte</h4>

    <%= f.text_field :title %>
    <% if @book.errors.include?(:title) %>
       <p style="color: red;"><%= @book.errors.full_messages_for(:title).first %>
     <% end %>
    
 
    <h4>Body</h4>
    <%= f.text_field :body %>
    <% if @book.errors.include?(:body) %>
      <p style="color: red;"><%=@book.errors.full_messages_for(:body).first %>
     <% end %>

    <div class="new-btn">
        <%= f.submit 'Create Book' %>
    </div>
 
<% end %>
</div>