<span id="title">
  <h1>Books</h1>
</span>
<div class="top">
  <p>Title</p>
  <p>Body</p>
</div>
   <% @books.each do |book| %>
      <div class="sinki">
        <div class="sinki-1">
        
        <span><%= book.title %></span>
        </div>
        <div class="sinki-2">
       
        <span><%= book.body %></span>
        </div>
        <div class="sinki-3">
          <%= link_to "show", book_path(book) %> 
          <%= link_to "edit", edit_book_path(book) %> 
          <%= link_to "delete", book, method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </div>
      </div>
      
   <% end %>
<div class="new">
  <h1>New book</h1>
  <!-- form_for部分 -->
  <%= form_for(@book) do |f| %>
  
      <h4>Tilte</h4>
      <%= f.text_field :title %>
  
      <h4>Body</h4>
      <%= f.text_field :body %>

      <div class="new-btn">
          <%= f.submit 'Create Book' %>
      </div>
  
  <% end %>
</div>
   
